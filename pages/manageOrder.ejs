</head>
<%- include('parts/nav-section.ejs') %>

  <body class="sign-in-illustration">
    <ul class="circles">
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>
    <section>
      <style>
        table {
          border-collapse: collapse;
        }

        tr {
          border: none;
        }

        #involves {
          width: 50px;
          height: 50px;
          border-radius: 50px;
        }
      </style>
      <!-- <div class="page-header min-vh-100"> -->
      <div class="container">
        <div class="row pb-6 mb-6 ">
          <%if(messages.cannotcancel){%>
            <p class="text-primary">
                <%= messages.cannotcancel%>
            </p>
          <%}%>
          <% for(let i=0; i < orders.length; i++){ %>
            <div class="col-lg-12 col-md-4 mb-6 mb-lg-0">
              <div class="card overflow-auto max-height-vh-100 max-width-vh-100 mt-4 ">
                <div class="card-header">
                  <form action="/order/cancel" method="post" onsubmit="return submitForm(this);">
                    <h3 class="card-title d-flex justify-content-between">
                      Order from <%=orders[i].fullName%>
                        <input type="text" id="orderId" name="orderId" value="<%=orders[i].orderId%>" hidden>
                        <button type="submit" class="btn btn-primary ">
                          Cancel
                        </button>
                    </h3>
                    <h6><%=orders[i].createdAt%> - <%=orders[i].orderStatus%></h6>
                  </form>
                </div>
                <div class="card-body">
                  <table id="productTable" class="table table-condensed table-striped" table align="center">
                    <% for(let j = 0; j < orders[i].products.length; j++){ %> 
                    <tr align="center"> 
                      <td class="align-middle">
                        <%=orders[i].products[j].name%>
                      </td>
                      <td class="align-middle"><%=orders[i].products[j].quantity%></td>
                      <td class="align-middle"><%=orders[i].products[j].price%></td>
                      <td class="align-middle"><%=orders[i].products[j].totalPrice%></td>
                    </tr>
                    <% } %>
                    <tr align-"center">
                      <td class="align-middle" colspan="4">
                        Total Price(RM):<%=orders[i].totalPrice%>
                      </td>
                    </tr>
                    
                  </table>
                </div>
              </div>
            </div>
            <% } %>
        </div>
      </div>
      <!-- </div> -->
    </section>

    <script>
      function submitForm(form) {
        swal({
          title: "Are you sure to cancel?",
          icon: "warning",
          buttons: true,
          dangerMode: true,
        })
          .then((willDelete) => {
            if (willDelete) {

              form.submit();
            }
          });
        return false;
      }
    </script>

    <!--   Core JS Files   -->
    <script src="/js/core/popper.min.js" type="text/javascript"></script>
    <script src="/js/core/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/plugins/perfect-scrollbar.min.js"></script>
    <!--  Plugin for Parallax, full documentation here: https://github.com/wagerfield/parallax  -->
    <script src="/js/plugins/parallax.min.js"></script>
