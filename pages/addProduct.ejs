<!DOCTYPE html>
<html lang="en" itemscope itemtype="http://schema.org/WebPage">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>

    <!-- Test File For Addproduct-->
    <form action="/product/addProduct" method="post" enctype="multipart/form-data">
        product image 
        <input type="file" name="productPhotos" required multiple>
        <br>
        product name 
        <input type="text" name="name" required>
        <br>
        product price 
        <input type="number" name="price" min="0" value="0" step=".01" required>
        <br>
        product description 
        <textarea name="description" id="description" cols="30" rows="10" required></textarea>
        <br>
        product category 
        <input type="text" name="category" required>
        <br>
        product size
        <input type="text" name="size">
        <br>
        product color 
        <input type="text" name="color">
        <br>
        product additional Details 
        <input type="text" name="additionalDetails">
        <br>
        <input type="submit" value="Submit">
    </form>
    
    
</body>

</html>