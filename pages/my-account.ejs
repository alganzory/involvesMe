    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row justify-content-around">
                    <div class="col-xl-5 col-lg-6 col-md-8 d-flex flex-column mx-lg-0 mx-auto">
                        <div class="card card-plain">
                            <div class="card-header pb-0 text-left">
                                <h4 class="font-weight-bolder">My Account</h4>
                                <p class="mb-0">Detailed information about your account</p>
                            </div>
                            <div class="card-body pb-0">
                                <form role="form" method="PUT" action="/account/username">
                                    <h6 class="mb-0">Username</h6>
                                    <div class="input-group mb-1">
                                        <!-- <span class="input-group-text bg-gray-500">@</span> -->
                                        <input type="text" name="username" id="username" class="input-group-text bg-gray-500 col-8 text-start" value="<%=user.username%>" placeholder="@Username" aria-label="Username" aria-describedby="button-addon2" readonly>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-3" type="button" id="editbuttonusername" onclick="enableUsername()"> 
                                            <svg xmlns="http://www.w3.org/2000/svg" width="25"height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16" >
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </button>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-2" type="button" id="usernamecancel" onclick="usernameCancel()" style="display: none;">Cancel</button>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-2" type="submit" id="saveName" onclick="saveuserName()" style="display: none;">Save</button>

                                    </div>
                                </form>
                                <form role="form" method="PUT" action="/account/email">
                                    <h6 class="mb-0">Email</h6>
                                    <div class="input-group mb-1">

                                        <input type="text" id="email" class="input-group-text bg-gray-500 col-8 text-start" value="<%=user.email%>" placeholder="kaka@gmail.com" aria-label="email" aria-describedby="button-addon2" readonly>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-3" type="button" id="editbuttonemail" onclick="enableEmail()"> <svg id="svgedit"xmlns="http://www.w3.org/2000/svg" width="25"
                                                height="16" fill="currentColor" class="bi bi-pencil-square"
                                                viewBox="0 0 16 16" >
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg></button>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-2" type="button" id="emailcancel" onclick="emailCancel()" style="display: none;">Cancel</button>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-2" type="submit" id="saveEmail" onclick="saveEmail()" style="display: none;"> Save </button>
                                    </div>
                                </form>
                                <form role="form" method="PUT" action="/account/password">
                                    <h6 class="mb-0">Password</h6>
                                    <div class="input-group mb-1">

                                        <input type="text" id="password" class="input-group-text bg-gray-500 col-8 text-start" placeholder="**********" aria-label="password" aria-describedby="button-addon2" readonly>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-3" type="button" id="editbuttonpassword" onclick="enablePassword()"> <svg xmlns="http://www.w3.org/2000/svg" width="25"
                                                height="16" fill="currentColor" class="bi bi-pencil-square"
                                                viewBox="0 0 16 16" >
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg></button>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-2" type="button" id="passwordcancel" onclick="passwordCancel()" style="display: none;">Cancel</button>
                                        <button class="btn btn-outline-primary mb-0 mx-1 px-2" type="submit" id="savePassword" onclick="savePassword()" style="display: none;">

                                      
                                            Save

                                        </button>

                                    </div>
                                </form>
                            
                                <form role="form" method="post" action="/account/account-type">

                                    <br>
                                    <div class="row mb-0 col-12 text-quicksand ">
                                        <p class="mb-1 text-left ">I am a: </p>
                                        <div class="btn-group " role="group ">
                                            <input type="text " class="btn btn-primary col-2" name="account-type " id="fan" value="fan " readonly>
                                            <input type="submit " class="btn-check " name="account-type " id="content-creator" value="content-creator ">
                                            <label class="btn btn-lg px-3 btn-outline-primary" id="tog" for="content-creator " onclick="toggle()">Upgrade to Content Creator</label>
                                        </div>
                                    </div>
                                </form>
                                <!-- Divider Text -->
                                <div class="form-group col-lg-11 mx-auto d-flex align-items-center my-4 ">
                                    <div class="border-bottom w-100 ml-5 "></div>
                                    <span class="px-0 small text-muted font-weight-bold text-muted "></span>
                                    <div class="border-bottom w-100 mr-5 "></div>
                                </div>


                                <!-- Social Login -->

                                <div class="row ">
                                    <div class="col-sm-12 ">
                                        <!-- Button trigger modal -->
                                        <button type="button " class="btn btn-secondary" data-toggle="modal " data-target="#deleteModel " onclick="document.getElementById( 'deleteModal').style.display='block' ">
                                            Delete account
                                        </button>


                                        <!-- Modal -->
                                    
                                        <div class="modal " id="deleteModal" tabindex="-1 " role="dialog" aria-labelledby="deleteModalLabel " aria-hidden="true ">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content ">
                                                    <div class="modal-header ">
                                                        <h5 class="modal-title text-secondary " id="exampleModalLabel ">
                                                            Account deletion</h5>
                                                        <button type="button " class="close border-0 bg-transparent " data-dismiss="modal " aria-label="Close " onclick="document.getElementById( 'deleteModal').style.display='none' ">
                                                            <span aria-hidden="true ">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body ">
                                                        Are you sure you want to Delete your Account ?
                                                    </div>
                                                    <div class="modal-footer ">
                                                        <form role="form " method="delete " action="/account/delete-account ">
                                                            <button type="submit " class="btn bg-gradient-primary">Delete account</button>
                                                        </form>
                                                        <button type="button " class="btn btn-secondary " data-dismiss="modal " onclick="document.getElementById( 'deleteModal').style.display='none' ">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

