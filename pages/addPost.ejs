                    <!-- Title -->
                    <label for="name" class="form-check-label text-muted">Post Title:
                    </label>
                    <input type="text" name="title" class="form-control form-control-md" placeholder="Post Title"
                      aria-label="name" aria-describedby="name-addon" required />
                  </div>
                  
                </div>
                <!-- Second Row -->
                <div class="row justify-content-between text-left">
                  <div class="form-group col-12 flex-column d-flex">
                    <!-- Description -->
                    <label for="description" class="form-check-label text-muted">Post Description:
                    </label>
                    <textarea name="description" class="form-control form-control-md" placeholder="The Description of your Post" id="description" cols="30" rows="3"></textarea>
                  </div>
                </div>
                <div class="row justify-content-center">
                  <div class="form-group col-sm-6">
                    <button type="submit" class="btn btn-md bg-gradient-primary w-100 mt-3 mb-0">
