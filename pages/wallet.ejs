<body>
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <section>
        <%- include('parts/nav-section.ejs') %>
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-8 d-flex flex-column mx-auto pt-10">
                    <% if (messages.error) {
                        %>
                      <div class="alert alert-danger text-white border-0 text-sm p-3" role="alert">
                        <%= messages.error %>
                      </div>
                      <%
                      } %>
                      <% if (messages.success) {
                        %>
                      <div class="alert alert-success text-white border-0 text-sm p-3" role="alert">
                        <%= messages.success %>
                      </div>
                      <%
                      } %>
                    <div class="card card-plain bg-gradient-faded-primary">
                        <h4 class="pt-2 text-center">Wallet</h4>
                        <div class="card-body border-0 text-sm pt-3">
                            <div class="row">
                                <div class="col text-start">
                                    <h4> Balance </h4>
                                </div>
                                <div class="col text-end">
                                    <h4>
                                        <%=userWallet.balance%> MYR
                                    </h4>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col text-start">
                                    <h4> Points </h4>
                                </div>
                                <div class="col text-end">
                                    <h4>
                                        <%=userWallet.points%>
                                    </h4>
                                </div>
                            </div>
                            <form method="post" action="/wallet/withdraw">
                                <div align="center" class="pt-3">
                                    <h4>Enter your Paypal Email</h4>
                                    <input class="form-control form-control-md" required type="email" name="paypalEmail" placeholder="email@email.com" id="paypalEmail">
                                    <br>
                                    <button type="submit"
                                        class="btn btn-rounded btn-outline-white bg-gradient-secondary">Withdraw</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>


    <script src="../assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="../assets/js/core/bootstrap.min.js" type="text/javascript"></script>
